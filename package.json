{
  "name": "key-mapping-tools",
  "version": "1.0.1",
  "description": "这是一个按键映射工具",
  "main": "dist/target/main/main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production node build/build.js && electron-builder --mac",
    "build:pack": "cross-env NODE_ENV=production node build/build.js pack",
    "build:pack-render": "cross-env NODE_ENV=production node build/build.js pack-renderer",
    "build:pack-main": "cross-env NODE_ENV=production node build/build.js pack-main",
    "start:renderer": "cross-env NODE_ENV=development webpack-dev-server -d --config build/webpack.renderer.config.js --devtool '#source-map' --inline --env.server"
  },
  "author": "yongchun6688@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yongchuncao/key-mapping-tools.git"
  },
  "license": "ISC",
  "build": {
    "productName": "Key Mapping Tools",
    "appId": "com.hd123.app.KeyMapTools",
    "directories": {
      "output": "dist/packages"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://172.17.2.64:3002/download/latest/"
      }
    ],
    "files": [
      "dist/target/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "static/icons/icon.icns",
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg",
        "pkg"
      ]
    }
  },
  "dependencies": {
    "application-config-path": "^0.1.0",
    "assert": "^1.4.1",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-packager": "^13.1.1",
    "electron-updater": "^4.0.6",
    "ffi": "node-ffi/node-ffi",
    "fs-extra": "^7.0.1",
    "log4js": "^4.0.2",
    "moment": "^2.24.0",
    "nedb": "^1.8.0",
    "node-schedule": "^1.3.2",
    "objc": "^0.19.0",
    "ref": "TooTallNate/ref",
    "robotjs": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/runtime": "^7.4.2",
    "babel-loader": "^8.0.5",
    "babili-webpack-plugin": "^0.1.2",
    "copy-webpack-plugin": "^5.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^3.1.7",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-rebuild": "^1.8.4",
    "esm": "^3.0.84",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "node-gyp": "^3.8.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "vue": "^2.6.10",
    "vue-awesome": "^3.5.0",
    "vue-electron": "^1.0.6",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.0.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
